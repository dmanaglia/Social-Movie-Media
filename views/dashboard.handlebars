<header class="w-25 mx-auto mt-5 text-center">
    <nav class="d-flex justify-content-around">
        <a href="">Home</a>
        <p>-</p>
        <a href="/dashboard">Dashboard</a>
        <p>-</p>
        <a href="/search">Search</a>
        <p>-</p>
        <a href="/logout">Logout</a>
    </nav>
    <h2>{{user.username}} Dashboard</h2>
</header>

<main>
    {{#if reviews.length}}
    <div class="row row-cols-1 row-cols-md-6 px-5 gy-5">        

        
        {{#each reviews as |review|}}
        <div class="col">
            <div class="card h-100">
                <img class="card-img-top movie-poster" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><a href="/movie/{{review.movie.id}}">{{review.movie.Title}}</a></h5>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="d-flex justify-content-center align-items-center">Looks like you haven't reviewed anything yet! Start looking for movies <a href="/search">here</a>.</p>
    {{/if}}
</main>