<div class="w-75 mt-5 p-3 mx-auto"> <!-- Form for editing a review for a movie --> 
    <form id="editReview-form">
        <div class="text-center">
            <h2>{{editReview.movie.Title}}</h2>
        </div>
        <h4>Edit Review:</h4>
        <div class="form-floating mb-3"> <!-- Taking the title from the previous review as a starting value -->
            <input type="text" class="form-control" id="review-title" value="{{editReview.title}}">
            <label for="review-title">Title</label>
        </div>
        <div class="form-floating"> <!-- Taking the review/body from the previous review as a starting value -->
            <input type="text" class="form-control" id="review-body" value="{{editReview.body}}">
            <label for="review-body">Review</label>
        </div>


        <div class="text-center mt-2" id="review-rate" data-id="{{editReview.rate}}">
         <!-- Rating system for 1-5 stars for review -->
         
            Rating:
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rateOptions" id="rate1" value=1>
                <label class="form-check-label" for="rate1">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rateOptions" id="rate2" value=2>
                <label class="form-check-label" for="rate2">2</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rateOptions" id="rate3" value=3>
                <label class="form-check-label" for="rate3">3</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rateOptions" id="rate4" value=4>
                <label class="form-check-label" for="rate4">4</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rateOptions" id="rate5" value=5>
                <label class="form-check-label" for="rate5">5</label>
            </div>
        </div>

        <div class="form-footer mt-3 d-flex justify-content-between"> <!-- Go back button for functionality -->
            <button class="btn btn-primary" id="go-back-btn">Go Back</button>
            <btn class="btn btn-primary" id="edit-review" data-id="{{editReview.movieId}}">Submit</btn>
            <btn class="btn btn-danger"  id="delete-review" data-id="{{editReview.id}}">Delete</btn> <!-- Delete button as a method of "editing" -->
        </div>
    </form>
</div>
<script src="/js/editReview.js"></script>