        <a href="/search">Search</a>
        <p>-</p>
        <a href="/logout">Logout</a>
    </nav>
</div>

<div class="w-75 mx-auto">
    {{#each reviews as |review|}}
        <div class="row">
            <div class="col">
                <div class="card mt-5">
                    <div class="card-title text-center">
                        <h3><a href="/movie/{{review.movie.id}}">{{review.movie.Title}}</a></h3>
                    </div>
                    <div class="card-body">
                        <h4 style="margin-bottom: 1rem;">{{review.title}}</h4>
                        <p style="margin-bottom: 1rem;">{{review.body}}</p>
                        <p style="margin-bottom: 0;">{{review.rate}}/5 stars</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <h5>{{review.user.username}}</h5>
                        <h5>{{review.updatedAt}}</h5>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="w-25 mx-auto mt-5 text-center">
