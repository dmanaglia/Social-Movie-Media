    <form class="d-flex flex-column m-5 w-75 text-center mx-auto" id="movie-search-form">
        <div class="form-floating mx-auto">
            <input type="text" class="form-control mt-3" id="movieSearch" placeholder="Title">
            <label class="m-3" for="movieSearch">Title</label>
            <p class="mt-4">AND/OR</p>
            <div class="d-flex justify-content-center flex-wrap">
                <div class="form-floating d-flex">
                    <input type="text" class="form-control mt-3" id="actorSearch" placeholder="Actor">
                    <label class="m-3" for="actorSearch">Actor</label>
                </div>
                <p class="m-4">AND/OR</p>
                <div class="form-floating d-flex">
                    <input type="text" class="form-control mt-3" id="directorSearch" placeholder="Director">
                    <label class="m-3" for="directorSearch">Director</label>
                </div>
                <p class="m-4">AND/OR</p>
                <div class="form-floating d-flex">
                    <input type="text" class="form-control mt-3" id="genreSearch" placeholder="Genre">
                    <label class="m-3" for="genreSearch">Genre</label>
                </div>
            </div>
        </div>
        <div class="form-text d-flex flex-column mx-auto mt-3">
            <button class="btn btn-primary m-3" id="submitSearch" style="width:100px;">Search</button>
            <div><span id="result-count"></span> Results Found.</div>
        </div>
    </form>
</header>

